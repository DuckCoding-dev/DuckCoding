{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DuckCoding",
  "version": "1.1.1",
  "identifier": "com.duckcoding.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DuckCoding - 一键配置",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "mirror.duckcoding.com",
          "enableTauriAPI": true
        }
      ]
    }
  },
  "allowlist": {
    "http": {
      "all": false,
      "scope": [
        "https://mirror.duckcoding.com/**",
        "https://registry.npmmirror.com/**",
        "https://registry.npmjs.org/**"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
